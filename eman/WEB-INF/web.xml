<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>eman</display-name>
  <servlet>
    <description></description>
    <display-name>ActionDispatcher</display-name>
    <servlet-name>ActionDispatcher</servlet-name>
    <servlet-class>ua.ivanchenko.eman.servlets.ActionDispatcher</servlet-class>
    <init-param>
      <param-name>config</param-name>
      <param-value>config/config.properties</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>ActionDispatcher</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.png</url-pattern>
  </servlet-mapping>
  <listener>
    <listener-class>ua.ivanchenko.eman.servlets.ApplicationServletContextListener</listener-class>
  </listener>
   <mime-mapping>
        <extension>png</extension>
        <mime-type>image/png</mime-type>
    </mime-mapping>
  <resource-ref>
    <res-ref-name>jdbc/eman_oracle</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
</web-app>